<% include ../partials/header %>

        <div class="form-style">
                    <h1 class="text-center my-4">Edit <span class="italic">'<%= blog.title %>'</span> blog post</h1> 
               <form class="ui form" action="/blog/<%=blog._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label>EditTitle</label>
                <input class="" type="text" name="blog[title]" value="<%= blog.title %>" required>         
            </div>
            <div class="form-group">
                <label>Edit Intro Image</label>                
                <input class="" type="text" name="blog[image]" value="<%= blog.image %>" required>        
            </div>
            <div class="form-group">
                <label>Edit Category</label>                
                <input class="" type="text" name="blog[category]" value="<%= blog.category %>" required>        
            </div>
            <div class="form-group">
                <label>Edit Blog Content</label> 
                <div class="w-full">
                        <input id="x" type="hidden" name="blog[post]" class="w-1/2">
                        <trix-editor class="trix-content" input="x">
                            <div class="trix-content">
                                <%-blog.post %>
                            </div>
                        </trix-editor>
                </div>              
                
            </div>
            <div class="form-group">
                <button class="button btn-lg btn-primary btn-block">Submit</button>         
            </div>
            

                    
            </form>
            

        </div>


<% include ../partials/footer %>