<% include ../partials/header %>

        <div class="form-style">
        <h1 class="text-center m-4">Add a new Blog Post</h1> 
          <form action="/blog" method="POST">
             <div class="form-group">
                <label>Title</label>
                <input class="form-input" type="text" name="blog[title]" placeholder="title" required>         
            </div>
            <div class="form-group">
                <label>Image</label>                
                <input class="form-input" type="text" name="blog[image]" placeholder="image url" required>        
            </div>
            <div class="form-group">
                <label>Category</label>                
                <input class="form-input" type="text" name="blog[category]" required>        
            </div>
            <div class="form-group">
                <label>Blog Content</label>
                <div class="form-input">
                        <input id="x" type="hidden" name="blog[post]">
                        <trix-editor input="x"></trix-editor>
                         
                </div>

            </div>
            <div class="form-group">
                <button class="button btn-lg btn-primary btn-block">Submit</button>         
            </div> 
            
            
            
          </form>  
        </div>
    

<% include ../partials/footer %>