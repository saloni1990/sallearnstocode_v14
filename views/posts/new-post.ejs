<% include ../partials/header %>

    <div class="row">

        <div class="formStyle">
        <h1>Add a new Blog Post</h1> 
          <form action="/blog" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type="text" name="blog[title]" placeholder="title" required>         
            </div>
            <div class="form-group">
                <label>Image</label>                
                <input class="form-control" type="text" name="blog[image]" placeholder="image url" required>        
            </div>
            <div class="form-group">
                <label>Category</label>                
                <input class="form-control" type="text" name="blog[category]" required>        
            </div>
            <div class="form-group">
                <label>Blog Content</label>                
                <textarea class="form-control" name="blog[post]" required></textarea>
            </div>
            <div class="form-group">
                <button class="button btn-lg btn-primary btn-block">Submit</button>         
            </div>
            
            
            
          </form>  
        </div>
        
    </div>



<% include ../partials/footer %>